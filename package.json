{
  "name": "movie-service",
  "version": "1.0.0",
  "main": "server.ts",
  "repository": "https://github.com/EmilMattsson/movie-service.git",
  "author": "Emil <emil.emanuel@outlook.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "serve": "tsc && node ./build/server.js",
    "start:watch": "nodemon"
  },
  "dependencies": {
    "fastify": "^2.12.1"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-typescript": "^7.9.0",
    "@types/jest": "^25.1.5",
    "@types/node": "^13.7.7",
    "babel-jest": "^25.2.6",
    "jest": "^25.2.6",
    "nodemon": "^2.0.3",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "ext": "ts",
    "delay": "3",
    "execMap": {
      "ts": "ts-node"
    }
  }
}
